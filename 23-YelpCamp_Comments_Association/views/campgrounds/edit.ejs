<%- include('../partials/header') %>

<div class="container">
   <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>

        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <input value="<%= campground.image %>" type="text" name="campground[image]" class="form-control" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[description]" value="<%= campground.description %>" class="form-control" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>